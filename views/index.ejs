  <section ng-controller="LoginController as login">
    <div class="container-fluid">

      <nav class="navbar navbar-default navbar-fixed-top">
        <!-- <nav class="navbar navbar-default"> -->
        <div class="container-fluid">
          <div class="navbar-header">
